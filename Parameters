pipeline{
    agent any
    tools{
        jdk java
        maven maven
        git git
    }
    parameters{
        string defaultValue: 'Checkout', name: 'filename'
    }
    stages{
        stage('Checkout'){
            when{
                expression {params.filename == 'Checkout'}
            }
            steps{
                echo "Checking out from git"
                git branch: 'Main' , url: 'https://github.com/Shadhanah-Rajan/PetStoreWebApp.git'
            }
        }
        stage('Clean Package'){
            when{
                expression {params.filename == 'Clean Package'}
            }
            steps{
                echo "Running clean package"
                git branch: 'Main' , url: 'https://github.com/Shadhanah-Rajan/PetStoreWebApp.git'
                sh "mvn -Dmaven.test.failure.ignore=true clean package"  
            }
        }
        stage('Testing'){
            when{
                expression {params.filename == 'Testing'}
            }
            parallel{
                stage('Sequential Testing'){
                stages{
                    stage('Acceptance Testing'){
                        steps{
                            echo "Acceptance testing is successful."
                        }
                    }
                    stage('Regression Testing'){
                        steps{
                            echo "Regression testing is successful."
                        }
                    }
                }
                }
                stage('Performance Testing') {
                    steps {
                        echo 'Performance testing is successful.'
                    }
                }
                stage('Code Quality Check Test') {
                    steps {
                        echo 'Code quality check is successful.'
                    }
                }
            }
        }
    }
}
